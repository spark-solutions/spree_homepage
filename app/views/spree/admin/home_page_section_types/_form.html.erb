<div class="row">
  <div class="col-sm-12">
    <%= f.field_container :name, class: ['form-group'], 'data-hook' => 'name' do %>
      <%= f.label :name, Spree.t(:name) %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <%= f.field_container :home_page_field_type_ids, class: ['form-group'] do %>
      <%= f.label :home_page_field_type_ids, Spree.t(:available_field_types) %>
      <%= f.select :home_page_field_type_ids, Spree::HomePageFieldType.all.map { |ft| ["#{ft.name} (#{ft.field_type})" , ft.id] }, {}, { multiple: true, class: "select2" } %>
      <%= f.error_message_on :home_page_field_type_ids %>
    <% end %>
  </div>
  <div class="col-sm-6">
    <%= button_link_to Spree.t(:new_field_type), new_admin_home_page_field_type_path, class: "btn", icon: 'plus' %>
  </div>
</div>