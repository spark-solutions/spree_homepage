<% content_for :page_title do %>
  <%= link_to Spree.t(:home_page_section_types), spree.admin_home_page_section_types_url %> /
  <%= @home_page_section_type.name %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_field_type), new_admin_home_page_field_type_path, { class: "btn-default", icon: 'add' } %>
<% end if can? :create, Spree::HomePageFieldType %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @home_page_section_type } %>

<%= form_for [:admin, @home_page_section_type] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
