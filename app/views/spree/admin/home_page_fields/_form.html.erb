<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @home_page_field } %>

<div class="row" id="general_fields">
  <div class="col-xs-12">
    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.error_message_on :title %>
    <% end %>

    <%= f.field_container :description, class: ['form-group'] do %>
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    <% end %>

    <div class="row">
      <div class="col-xs-6">
        <%= f.field_container :field_type, class: ['form-group'] do %>
          <%= f.label :field_type %>
          <%= f.select(:field_type, Spree::HomePageField::FILEDS.map { |o| [o.capitalize, o] }, { include_blank: true }, { class: 'select2' }) %>
          <%= f.error_message_on :field_type %>
        <% end %>
      </div>

      <div class="col-xs-6">
        <%= f.field_container :home_page_section_id, class: ['form-group'] do %>
          <%= f.label :home_page_section_id %>
          <%= f.collection_select(:home_page_section_id, Spree::HomePageSection, :id, :name, { class: 'select2' }) %>
          <%= f.error_message_on :home_page_section_id %>
        <% end %>
      </div>
    </div>
  </div>
</div>
