<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @home_page_field } %>

<div class="row">
  <div class="col-sm-6">
    <%= f.field_container :field_type, class: ['form-group'] do %>
      <%= f.label :field_type %>
      <%= f.select(:field_type, Spree::HomePageField::FIELDS.map { |o| [o.capitalize, o] }, { include_blank: false }, { class: 'select2' }) %>
      <%= f.error_message_on :field_type %>
    <% end %>
      </div>
      <div class="col-sm-6">
     <%= f.field_container :home_page_section_id, class: ['form-group'] do %>
      <%= f.label :home_page_section_id %>
      <%= f.collection_select(:home_page_section_id, Spree::HomePageSection.all, :id, :name, {}, { class: 'select2' }) %>
      <%= f.error_message_on :home_page_section_id %>
    <% end %>
  </div>
</div>

<div class="row" id="general_fields">
  <div class="col-sm-12">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>

    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.error_message_on :title %>
    <% end %>

    <%= f.field_container :content, class: ['form-group'] do %>
      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    <% end %>

    <%= f.field_container :image, class: ['form-group'] do %>
      <%= f.label :image %>
      <%= image_tag main_app.url_for(@home_page_field.image.try(:attachment)), class: "img-thumbnail" if @home_page_field.image %>
      <%= f.file_field :image %>
    <% end %>

  </div>
</div>
