<div class="row">
  <div class="col-sm-12">
  <%= f.field_container :name, class: ['form-group'], 'data-hook' => 'name' do %>
    <%= f.label :name, Spree.t(:name) %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.error_message_on :name %>
  <% end %>

  <%= f.field_container :field_type, class: ['form-group'] do %>
    <%= f.label :field_type %>
    <%= f.select(:field_type, Spree::HomePageFieldType::FIELDS.map { |type| [type.capitalize, type] }, { include_blank: false }, { class: 'select2' }) %>
    <%= f.error_message_on :field_type %>
  <% end %>
  </div>
</div>