<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @home_page_field } %>

<div class="row">
  <div class="col-sm-12">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>

    <%= f.field_container :username, class: ['form-group'] do %>
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>
      <%= f.error_message_on :username %>
    <% end %>

    <%= f.field_container :image, class: ['form-group'] do %>
      <%= f.label :image %>
      <%= image_tag main_app.url_for(@instagram_user.image.try(:attachment)), class: 'img-thumbnail' if @instagram_user.image %>
      <%= f.file_field :image %>
    <% end %>
  </div>
</div>
