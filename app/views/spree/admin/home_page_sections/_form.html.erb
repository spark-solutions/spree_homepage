<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @home_page_section } %>

<div class="row" id="general_fields" >
  <div class="col-sm-12">
    <%= f.field_container :home_page_section_type_id, class: ['form-group'] do %>
      <%= f.label :home_page_section_type_id %>
      <%= f.collection_select(:home_page_section_type_id, Spree::HomePageSectionType.all, :id, :name, {}, { class: 'select2' }) %>
      <%= f.error_message_on :home_page_section_type_id %>
    <% end %>
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>

    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.error_message_on :title %>
    <% end %>

    <%= f.field_container :description, class: ['form-group'] do %>
      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
    <% end %>

    <%= f.field_container :visible, class: ['form-group'] do %>
      <%= f.label :visible %>
      <%= f.check_box :visible, class: 'form-control' %>
    <% end %>
    <%= f.field_container :mobile_visible, class: ['form-group'] do %>
      <%= f.label :mobile_visible %>
      <%= f.check_box :mobile_visible, class: 'form-control' %>
    <% end %>

  </div>
</div>
